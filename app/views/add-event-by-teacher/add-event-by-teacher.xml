<Page actionBarHidden="true" class="page" xmlns="http://www.nativescript.org/tns.xsd" loaded="pageLoaded">
    <FlexboxLayout class="page">
        <StackLayout class="form">
            <GridLayout rows="auto,auto,auto,auto,auto,auto,auto" columns="*">
                <StackLayout row="0">
                    <Label text="{{user.firstname + ' ' + user.lastname}}" textWrap="true" />
                </StackLayout>
                <StackLayout row="1">
                    <Label text="{{teacher.subject }}" textWrap="true" />
                </StackLayout>

                <StackLayout row="2" class="input-field" id="container">
                    <!--ListView items="{{phonesArray}}">
                        <ListView.itemTemplate>
                            <StackLayout class="list-group-item">
                                <ScrollView height="130" >
                                    <Label class="field" text="{{ 'phone: ' +  phone || 'Downloading...' }}" textWrap="true" />
                                </ScrollView>
                            </StackLayout>
                        </ListView.itemTemplate>
                    </ListView-->
                    <ListPicker loaded="onListPickerLoaded" items="{{ listPickerPhones }}" selectedIndex="{{ index }}" selectedValue="{{ selectedItem }}" class="picker"></ListPicker>
                </StackLayout>

                <StackLayout row="3">
                    <!--DatePicker day="{{day}}" month="{{month}}" year="{{year}}"></DatePicker-->
                    <Label text="{{ Date }}" textWrap="true" />

                </StackLayout>

                <StackLayout row="4">
                    <TimePicker loaded="onPickerLoadedStart" hour="00" minute="00"></TimePicker>
                </StackLayout>
                <StackLayout row="5">
                    <TimePicker loaded="onPickerLoadedEnd" hour="00" minute="00"></TimePicker>
                </StackLayout>
                <StackLayout row="6">
                    <Button text="Add" tap="onAdd"></Button>
                </StackLayout>
            </GridLayout>
        </StackLayout>
    </FlexboxLayout>
</Page>