<Page xmlns:Card="@nstudio/nativescript-cardview"  xmlns="http://schemas.nativescript.org/tns.xsd" loaded="loaded">

    <ActionBar title="{{'Welcome ' + firstname }}" icon="" class="Bar">
        <NavigationButton tap="goBack" />
        <NavigationButton text="Go Home" android.systemIcon="ic_menu_home" tap="onHomeTap"></NavigationButton>
    </ActionBar>
    <FlexboxLayout class="box">
        
        <StackLayout>
            <SearchBar navigatingTo="SearchBar" class="searchBar" id="searchBar" hint="Search..." text="{{sbText}}" clear="onClear" submit="SearchButton" />
        </StackLayout>

        <ListView items="{{ filteredTeachers }}" itemTap="onItemTap" separatorColor="orangered"
                rowHeight="140" class="list-group" id="listView" row="2" > 
            <ListView.itemTemplate>
                <StackLayout class="list-group-item">
                    <Label text="{{ 'Teacher Name: ' +  firstname || 'Downloading...' }}" textWrap="true" class="title" />
                    <Label text="{{ 'Last Name: ' +  lastname || 'Downloading...' }}" textWrap="true" class="title" />
                    <Label text="{{ 'Subject: ' + subject || 'Downloading...' }}" textWrap="true" class="title" />
                </StackLayout>
            </ListView.itemTemplate>
        </ListView>
    </FlexboxLayout>
</Page>